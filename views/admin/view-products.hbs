<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto mt-3 mb-3">Add Product</a>
        </div>
        <table class="table mt-3 " id="productList">
  <thead>
    <tr>
      <th scope="col">NO</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row" class="rowNum"></th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 40px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
      <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want delete {{this.Name}} ?')">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>


<script>
  $(document).ready( function () {
    $('#productList').DataTable();
} );
</script>