<section class="vh-100 mt-5">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form action="/signup" method="post" id="form" >
          
          <div class="form-outline mb-4 input-control">
            <input type="text" id="name" class="form-control form-control-lg" placeholder="Name" name="Name" required />
            
            
          </div>
          <div class="form-outline mb-4 input-control">
            <input type="email" id="email" class="form-control form-control-lg" placeholder="Email address" name="EmailAddress" required />
            
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4 input-control">
            <input type="password" id="password" class="form-control form-control-lg" placeholder="Password" name="Password" required/>
           
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
           
            <a href="/login">Already have an accoungt ?</a>
          </div>

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg btn-block">Signup</button>

        

        </form>
      </div>
    </div>
  </div>
</section>

